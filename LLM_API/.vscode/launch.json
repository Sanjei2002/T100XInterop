{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (port 3000)",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=3000",
                "--no-debugger",
                "--no-reload",
            ],
            "jinja": true
        }
    ]
}